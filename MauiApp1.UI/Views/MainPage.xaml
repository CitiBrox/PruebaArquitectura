<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:MauiApp1.UI.ViewModels"
             x:Class="MauiApp1.UI.Views.MainPage"
             x:DataType="viewModels:MainViewModel">

    <VerticalStackLayout Spacing="15" Padding="20">
        <!-- Título o Cabecera -->
        <Label Text="Catálogo de Productos" 
               FontSize="24" 
               HorizontalOptions="Start" 
               Margin="0,10,0,20" />

        <!-- Campo de Entrada para Nombre del Producto -->
        <StackLayout HorizontalOptions="Start" Spacing="0">
            <Entry Text="{Binding ProductName}" 
                   Placeholder="Nombre del Producto"
                   HorizontalTextAlignment="Start"
                   WidthRequest="250" 
                   VerticalOptions="Center" />
        </StackLayout>

        <!-- Campo de Entrada para Precio -->
        <StackLayout HorizontalOptions="Start" Spacing="0">
            <Entry Text="{Binding ProductPrice}" 
                   Placeholder="Precio" 
                   Keyboard="Numeric" 
                   HorizontalTextAlignment="Start"
                   WidthRequest="250" 
                   VerticalOptions="Center" />
        </StackLayout>

        <!-- Botón para Agregar Producto -->
        <Button Text="Agregar Producto" 
                Command="{Binding AddProductCommand}" 
                BackgroundColor="#4CAF50" 
                TextColor="White" 
                CornerRadius="10" 
                HeightRequest="50" 
                HorizontalOptions="Start"/>

        <!-- Lista de Productos -->
        <CollectionView ItemsSource="{Binding Products}" Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" 
                           CornerRadius="10"  
                           BorderColor="#e0e0e0" 
                           Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   HorizontalOptions="Start" />
                            <Label Text="{Binding Price, StringFormat='Precio: {0:C}'}" 
                                   HorizontalOptions="Start" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </VerticalStackLayout>
</ContentPage>
